{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@": ["./"],
      "@/constants": ["constants"],
    },
    "target": "ES5",
    "lib": ["esnext", "dom", "dom.iterable"],
    "outDir": "./build",
    "declaration": false,
    "downlevelIteration": true,
    "module": "ES6",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react"

  },
  "types": ["node"],
  "include": ["src/**/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.mock.ts",
    "src/interface.ts"
  ]
}
