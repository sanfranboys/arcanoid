  "main": "index.js",
  "scripts": {
    "ssr": "npm run build:clean && npm run build-server && npm-run-all --parallel ssr:client ssr:server",
    "prod": "npm run build:clean && npm run build-server-prod && npm-run-all --parallel ssr:server ssr:client-prod",
    "ssr:server": "node dist/server.bundle.js --watch",
    "ssr:client": "webpack --watch  --config webpack/webpack.client.js",
    "build-server": "webpack --config  webpack/webpack.server.js ",
    "ssr:client-prod": "webpack --watch --mode=production  --config webpack/webpack.client.js",
    "build-server-prod": "webpack --mode=production --config  webpack/webpack.server.js ",
    "build:clean": "rimraf ./dist",
    "build": "webpack --mode=production",
    "lint": "eslint --ext .js,.ts,.tsx src/",
    "test": "jest"
  },
